@{
    Layout = "_LoginLayout";
}

<style>
    .home-button {
        display: inline-block;
        background: linear-gradient(to right, #ff9966 0%, #ff5e62 100%);
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        text-decoration: none;
        transition: background 0.5s;
        margin-top:20px;
    }

        .home-button:hover {
            background: linear-gradient(to right, #ff5e62 0%, #ff9966 100%);
        }
</style>

<body>
    <div class="container form_login">
        <h2>Đăng Nhập</h2>
       
        <form asp-action="Login" asp-controller="Admin" method="post">
            <div class="form-group">
                <input type="text" id="username" placeholder=" " name="taikhoan">
                <label>Tên người dùng</label>
            </div>
            <div class="form-group">
                <input type="password" id="password" placeholder=" " name="matkhau">
                <label>Mật khẩu</label>
            </div>
             @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger" style="font-size: 12px; color: red ; padding : 0 0 15px 0">
                @ViewBag.ErrorMessage
            </div>
        }   
        
            <button type="submit" class="btn-login">Đăng Nhập</button>
        </form>
        <a href="@Url.Action("HomeUser","Custome")" class="home-button">Trang chủ</a>

    </div>
</body>
