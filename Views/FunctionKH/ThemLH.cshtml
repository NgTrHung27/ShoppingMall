@{
    Layout="_CustomeLayout";
}

@using QLTTTM.models
@model QLTTTM.models.KhachHang



<div class="content-wrapper lienheform">
    @* <div class="page-header">
        <h3 class="page-title" style="font-weight:bold;font-size:30px;color:#ab8221">
            <span class="me-2">
                <i class="fa-solid fa-gift" style="color: #ab8221;"></i>
            </span> Quản Lý Thông Tin Sự Kiện
        </h3>
    </div> *@

    <div class="form_add_update">
        <h2>Thêm Liên Hệ</h2>
        
        <form asp-action="ThemLH" asp-controller="FunctionKH" method="post" enctype="multipart/form-data">

            @Html.ValidationSummary()

            @* <div class="form-group">
                <input type="hidden" id="address" name="MAMB" asp-for="MAMB" value="@Model.MAMB">
                <span asp-validation-for="MAMB" class="text-danger"></span>
            </div> *@



            <div class="form-group">
                <label asp-for="HOTEN">Họ và Tên:</label>
                <input type="text" id="name" name="HOTEN" asp-for="HOTEN">
                <span asp-validation-for="HOTEN" class="text-danger"></span>
            </div>






            <div class="form-group">
                <label asp-for="NGAYSINH">Ngày Sinh:</label>
                <input type="date" id="ngaysinh" name="NGAYSINH" asp-for="NGAYSINH"> 
                <span asp-validation-for="NGAYSINH" class="text-danger"></span>
            </div>





            <div class="form-group">
                <label asp-for="GIOITINH">Giới Tính:</label>
                <select id="gender" name="GIOITINH" asp-for="GIOITINH">
                    <option value="">Chọn giới tính</option>
                    <option value="true">Nam</option>
                    <option value="false">Nữ</option>
                </select>
                <span asp-validation-for="GIOITINH" class="text-danger"></span>
            </div>




            <div class="form-group">
                <label asp-for="SDT">Số Điện Thoại:</label>
                <input id="phone" name="SDT" asp-for="SDT" type="tel" inputmode="numeric" oninput="this.value = this.value.replace(/[^0-9]/g, '')">
                <span asp-validation-for="SDT" class="text-danger"></span>
            </div>




            <div class="form-group">
                <label asp-for="EMAIL">Email:</label>
                <input type="text" id="email" name="EMAIL" asp-for="EMAIL">
                <span asp-validation-for="EMAIL" class="text-danger"></span>
            </div>
             




            <div class="form-group">
                <label asp-for="DIACHI">Địa Chỉ:</label>
                <input type="text" id="address" name="DIACHI" asp-for="DIACHI">
                <span asp-validation-for="DIACHI" class="text-danger"></span>
            </div>





            <div class="form-group">
                <input type="hidden" id="address" name="TRANGTHAI" asp-for="TRANGTHAI" value="false">
                <span asp-validation-for="TRANGTHAI" class="text-danger"></span>
            </div>




            <div class="form-group">
                <input type="hidden" id="address" name="MAMB" asp-for="MAMB" value="@TempData["MAMB"]">
                <span asp-validation-for="MAMB" class="text-danger"></span>
            </div>           



           


            <div class="cover_submit">
                <button type="submit" class="btn-submit">Xác Nhận</button>
            </div>



            
        </form>


    </div>

       
</div>